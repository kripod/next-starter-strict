{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": { "@/*": ["*"], "*": [""] },
    "strict": true,
    "importsNotUsedAsValues": "error",
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts"
  ],
  "exclude": ["node_modules/", ".next/"]
}
