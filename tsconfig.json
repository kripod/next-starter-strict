{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": { "@/*": ["*"], "*": [""] },
    "verbatimModuleSyntax": true,
    "isolatedModules": false
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts"
  ],
  "exclude": ["node_modules/", ".next/"]
}
