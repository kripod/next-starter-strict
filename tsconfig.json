{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": { "@/*": ["*"], "*": [""] },
		"importsNotUsedAsValues": "error",
		"strict": true,
		"incremental": true // TODO: Remove, see tsconfig/bases#78
	},
	"include": [
		"*.config.js",
		"*.config.mjs",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": ["node_modules"]
}
