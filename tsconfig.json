{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": { "@/*": ["*"], "*": [""] },
    "strict": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts"
  ],
  "exclude": ["node_modules/", ".next/"]
}
