{
	"name": "next-starter-strict",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true npm run build",
		"clean": "git clean --force -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
		"dev": "next dev",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path ./.gitignore .",
		"lint:prettier": "prettier --check --ignore-path ./.gitignore .",
		"lint:typescript": "tsc",
		"prepare": "husky install",
		"start": "next start"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"dependencies": {
		"@heroicons/react": "^1.0.5",
		"@next/bundle-analyzer": "^12.0.7",
		"clsx": "^1.1.1",
		"focus-visible": "^5.2.0",
		"next": "^12.0.7",
		"next-compose-plugins": "^2.2.1",
		"postcss-import": "^14.0.2",
		"postcss-preset-env": "^7.0.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-polymorphic-types": "^2.0.0",
		"tailwindcss": "^3.0.1"
	},
	"devDependencies": {
		"@tsconfig/next": "^1.0.1",
		"@types/node": "^16.11.12",
		"@types/react": "^17.0.37",
		"@typescript-eslint/eslint-plugin": "^5.6.0",
		"@typescript-eslint/parser": "^5.6.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.4.1",
		"eslint-config-airbnb": "^19.0.2",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-next": "^12.0.7",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-etc": "^2.0.1",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-etc": "^2.0.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-tailwindcss": "^1.17.2",
		"husky": "^7.0.4",
		"lint-staged": "^12.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"typescript": "^4.5.3"
	}
}
